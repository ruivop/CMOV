<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:contentPadding="10dp">

    <FrameLayout
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="#04B404">

    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="189dp">

        <ImageView
            android:id="@+id/cafeitemimage"
            android:layout_width="87dp"
            android:layout_height="96dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/image_of_the_product" />

        <TextView
            android:id="@+id/cafitemname"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="44dp"
            android:text="@string/example"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cafeitemimage" />

        <TextView
            android:id="@+id/cafitemprice"
            android:layout_width="54dp"
            android:layout_height="17dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="44dp"
            android:text="@string/example"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cafitemname" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>